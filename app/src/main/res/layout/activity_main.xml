<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lyl.smartprogressbar.MainActivity">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.lyl.smartprogressbar.view.HorizontalProgressbarWithProgress
        android:id="@+id/progressbar1"
        app:progress_text_size="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="30dp"/>

    <com.example.lyl.smartprogressbar.view.RoundProgressBarWidthNumber
        android:id="@+id/progressbar2"
        app:progress_text_size="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="30dp"/>

</LinearLayout>

</ScrollView>
